#include <iostream>
using namespace std;
class complex
{
	float r;
	float i;

public:
	complex()
{
		r=0;
		i=0;
}
	complex operator+(complex);
	complex operator*(complex);
	friend istream&operator>>(istream&input,complex&t);
	friend ostream&operator<<(ostream&output,complex&t);
};
complex complex::operator+(complex c)
{
	complex temp;
	temp.r=r+c.r;
	temp.r=r+c.r;
	return temp;
}
complex complex::operator*(complex c)
{
	complex temp2;
	temp2.r=r+c.r;
	temp2.i=i*c.i;
	return temp2;
}
istream&operator>>(istream&input,complex&t)
{
	cout<<"enter the real part";
	cin>>c.r;
	cout<<"enter the imaginary part";
	cin>>c.i;
	return input;
}
ostream&operator<<(ostream&output,complex&t)
{
	output<<t.r<<"+"<<t.i<<"i\n";
	return output;
}
int main()
{
	complex c1,c2,c3,c4;
	cout<<"enter the 1st number\n";
	cin>>c1;
	cout<<"enter the 2nd number\n";
	cin>>c2;
	cout<<"enter the 3rd number\n";
	cin>>c3;
	cout<<"enter the 4th number\n";
	cin>>c4;
}
}


